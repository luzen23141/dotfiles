#! /bin/zsh

source "$HOME/.zshrc"
echo "Backing up your dotfiles..."

zinit update --all --parallel 16 &
pid=$!
cd "$DOTFILES" || (echo "Path Error" && exit)
pwd
brew bundle dump --describe --force --no-lock --file="$DOTFILES"/Brewfile
brew update
brew upgrade
brew autoremove
brew cleanup --prune=all
brew doctor

wait $pid
zinit self-update
