#! /bin/zsh

config_file=".aConfig"

# 檢查是否存在 .aConfig 檔案
if [ -f "$config_file" ]; then
  # 讀取 .phpConfig 檔案中的內容
  config_value=$(grep "main_branch=" "$config_file" | cut -d'=' -f2-)

  # 檢查是否找到 php= 指令
  if [ -n "$config_value" ]; then
    git rebase origin/"$config_value"
  else
    echo "未找到 main_branch= 指令，執行預設指令 git rebase origin/master"
    git rebase origin/master
  fi
else
  echo "未找到 $config_file ，執行預設指令 git rebase origin/master"
  git rebase origin/master
fi
